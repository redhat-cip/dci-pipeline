set -x

DIR="$1"
BODY="$2"
STARTING="$3"

TOPDIR=$(cd $(dirname $0); pwd)

if [[ $0 =~ .*-podman$ ]]; then
    SUFFIX=-podman
else
    SUFFIX=
fi

if [ -r "$TOPDIR/common$SUFFIX" ]; then
    BASEDIR="$TOPDIR"
else
    BASEDIR=/usr/share/dci-pipeline
fi

. "$BASEDIR/common$SUFFIX"

for json in $(ls $DIR/*.json); do
    # gerrit
    if [ $(jq -r .url $json) = null ]; then
        if [ -n "$STARTING" ] || [ -z "$GERRIT_SSH_ID" ] || [ -z "$GERRIT_SSH_LOGIN" ]; then
            continue
        fi
        CHANGEID=$(jq -r ._number $json)
        CURREV=$(jq -r .current_revision $json)
        PATCHSET=$(jq -r ".revisions[\"$CURREV\"]._number" $json)
        # Use json to allow message to be formatted
        echo '{"message": "'${BODY}'"}' |
          ssh \
          -i ~/.ssh/"$GERRIT_SSH_ID" \
          -p 29418 \
          "${GERRIT_SSH_LOGIN}@softwarefactory-project.io" \
            gerrit review -j "$CHANGEID,$PATCHSET"
    # github
    else
        GITHUB_PROJ=$(jq -r .head.repo.full_name $json)
        GITHUB_REPO_TOKEN=$($BASEDIR/get-config-entry "https://github.com/$GITHUB_PROJ" github_token "$GITHUB_TOKEN")
        if [ -z "$GITHUB_REPO_TOKEN" ]; then
            continue
        fi
        REPO_NAME=$(jq -r .head.repo.name $json)
        # voting on some GH projects
        if [[ -n "$GITHUB_VOTING_REPOS" && "$REPO_NAME" =~ $GITHUB_VOTING_REPOS ]]; then
            # doc in https://docs.github.com/en/rest/commits/statuses
            STATUSES_URL=$(jq -r .statuses_url $json)
            if [ -n "$STARTING" ]; then
                curl -s -H "Accept: application/vnd.github+json" -H "Authorization: token $GITHUB_REPO_TOKEN" -X POST -d "{\"state\":\"$STARTING\", \"description\": \"$BODY\",\"context\":\"DCI Job\"}" "$STATUSES_URL"
            else
                DCI_STATUS=$(echo -e "$BODY"|grep distributed-ci.io|tail -1|sed -e 's/- *//' -e 's/ .*//')
                DCI_URL=$(echo -e "$BODY"|grep distributed-ci.io|tail -1|sed -e 's/.*https/https/' -e 's/ .*//')
                # when no real url is found don't pass garbage to Github
                if ! [[ "$DCI_URL" =~ ^http.* ]]; then
                    DCI_URL=
                fi

                # when no DCI job is found, extract the status
                if [ -z "$DCI_URL" ]; then
                    DCI_STATUS=$(echo -e "$BODY"|grep -E "^(SUCCESS|ERROR|FAILURE|KILLED)")

                    # however, avoid this DCI_STATUS var update if the original DCI_STATUS contains a
                    # reference to "unable to rebase" issue, just to send the very same message
                    REBASE_MSG="unable to rebase"
                    if ! [[ "$DCI_STATUS" =~ .*"$REBASE_MSG".* ]]; then
                        DCI_STATUS=$(echo -e "$BODY"|sed -e '/- /d' | grep -Eo "^(SUCCESS|ERROR|FAILURE|KILLED)")
                    fi
                fi
                case "$DCI_STATUS" in
                    SUCCESS*)
                        GITHUB_STATUS=success;;
                    FAILURE*)
                        GITHUB_STATUS=failure;;
                    ERROR*|KILLED*)
                        GITHUB_STATUS=error;;
                    *)
                        GITHUB_STATUS=pending;;
                esac
                curl -s -H "Accept: application/vnd.github+json" -H "Authorization: token $GITHUB_REPO_TOKEN" -X POST -d "{\"state\":\"$GITHUB_STATUS\", \"description\": \"$DCI_STATUS\",\"target_url\":\"$DCI_URL\",\"context\":\"DCI Job\"}" "$STATUSES_URL"
            fi
        # non voting, only commenting
        else
            if [ -n "$STARTING" ] || [[ "$BODY" =~ KILLED ]]; then
                continue
            fi
            COMMENTS_URL=$(jq -r .comments_url $json)
            curl -s -H "Authorization: token $GITHUB_REPO_TOKEN" -X POST -d "{\"body\": \"$BODY\"}" "$COMMENTS_URL"
        fi
    fi
done

# send-feedback ends here
